<h1>Регистрация</h1>
<form action="/users/signup" method="POST">
  {{#if errorInput}}
  <div class="mb-3">
    <label for="validationServer03" class="form-label">Email address</label>
    <input name='email' type="email" class="form-control is-invalid" id="validationServer03"
      aria-describedby="validationServer03Feedback" required>
    <div id="emailHelp" class="invalid-feedback">{{errorInput}} </div>
  </div>
  <div class="mb-3">
    <label for="exampleInputPassword1" class="form-label">Password</label>
    <input name="pass" type="password" class="form-control is-invalid" id="exampleInputPassword1">
  </div>

  {{else if errorUserExits}}
  <div class="mb-3">
    <label for="validationServer03" class="form-label">Email address</label>
    <input name='email' type="email" class="form-control is-invalid" id="validationServer03"
      aria-describedby="validationServer03Feedback" required>
    <div id="emailHelp" class="invalid-feedback">{{errorUserExits}} </div>
  </div>
  <div class="mb-3">
    <label for="exampleInputPassword1" class="form-label">Password</label>
    <input name="pass" type="password" class="form-control is-invalid" id="exampleInputPassword1">
  </div>

  {{else}}

  <div class="mb-3">
    <label for="exampleInputEmail1" class="form-label">Email address</label>
    <input name="email" type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
    <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
  </div>
  <div class="mb-3">
    <label for="exampleInputPassword1" class="form-label">Password</label>
    <input name="pass" type="password" class="form-control" id="exampleInputPassword1">
  </div>
  {{/if}} 

  <button type="submit" class="btn btn-primary">Submit</button>
</form>